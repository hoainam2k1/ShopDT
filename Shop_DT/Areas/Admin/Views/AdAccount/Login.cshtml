@model Shop_DT.HomeView.AdminVM
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_LoginLayout.cshtml";
}
<div class="app">
    <div class="container-fluid p-h-0 p-v-20 bg full-height d-flex" style="background-image: url('~/AdminAssets/assets/images/others/login-3.png')">
        <div class="d-flex flex-column justify-content-between w-100">
            <div class="container d-flex h-100">
                <div class="row align-items-center w-100">
                    <div class="col-md-7 col-lg-5 m-h-auto">
                        <div class="card shadow-lg">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between m-b-30">
                                    <img class="img-fluid" alt="" src="~/assets/images/logo/mobile-store.png" width="150" height="100">
                                    <h2 class="m-b-0">Đăng nhập</h2>
                                </div>
                                <form asp-controller="AdAccount" asp-action="Login" method="post">
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="userName">Tài khoản:</label>
                                        <div class="input-affix">
                                            <i class="prefix-icon anticon anticon-user"></i>
                                            <input asp-for="UserName" type="text" class="form-control" id="userName">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="password">Mật khẩu:</label>
                                        @*<a class="float-right font-size-13 text-muted" href="">Forget Password?</a>*@
                                        <div class="input-affix m-b-10">
                                            <i class="prefix-icon anticon anticon-lock"></i>
                                            <input asp-for="Password" type="password" class="form-control" id="password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="d-flex align-items-center justify-content-between float-right">
                                            <button type="submit" class="btn btn-primary">Đăng nhập</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>